{
    "manifest_version": 2,
    "name": "TC to MS Test Playlist",
    "description": "Chrome extension to download a MS Test Playlist file built from the failed tests from TeamCity",
    "version":"1.0",

    "page_action":{
        "default_icon":"icon.png",
        "default_popup":"popup.html"
    },

    "background": {
        "scripts":["jquery-1.10.2.min.js","eventPage.js"],
        "persistent":false
    },

    "content_scripts":[
        {
            //"matches":["http://*/viewLog.html\\?buildId=*&tab=buildResultsDiv&buildTypeId=*"],
            "matches": ["http://maltcs1.corp.flp/*"],
            "js":["jquery-1.10.2.min.js","FileSaver.js","tcPage.js"]
        }
    ],

    "permissions":[
        "tabs",
        "http://maltcs1.corp.flp/*"
    ]
}